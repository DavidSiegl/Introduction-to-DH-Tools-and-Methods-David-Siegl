    "x = \"DiClOrod  IFeNi  lTRicLOr oETaNo  DiChlorod iPHeny lTrichL oroEThaNe\""
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 29,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Dichlorodiphenyltrichloroethane\n"
     ]
    }
   ],
   "source": [
    "string_final = x.lower()\n",
    "string_final = string_final[string_final.find('dichlorod'):string_final.find('-1')]\n",
    "string_final = string_final.replace('dichloro', 'Dichloro')\n",
    "string_final = string_final.replace(' ', '')\n",
    "string_final = string_final + 'e'\n",
    "print(string_final)"
   ]
